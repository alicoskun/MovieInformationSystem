@{
    Layout = null;
}

<link href="~/assets/plugins/form-datepicker/css/datepicker.css" rel="stylesheet" />
<script src="~/assets/plugins/form-datepicker/js/bootstrap-datepicker.js"></script>

@model WebProje.Models.tblMovie


<div class="row">
    <div class="col-sm-12">
        @using (Html.BeginForm("FilmEkle", "Admin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Fotoğraf</label>
                            <div class="col-sm-10">
                                <input type="file" name="file" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Film Adı</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.MovieName, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Yapım Yılı</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.MovieReleaseDate, new { @class = "form-control", style = "width:250px;" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Açıklama</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.MovieSynopsis, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Süre</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.MovieRunTimeMinutes, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Hasılat</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.MovieBoxOfficeDollars, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-9 col-sm-offset-3">
                        <div class="btn-toolbar pull-right">
                            <input type="submit" value="Kaydet" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#MovieReleaseDate").datepicker({ dateFormat: 'YYYY' });
        $("#MovieReleaseDate").datepicker('setDate', new Date());
    });
</script>


